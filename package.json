{
  "name": "sportmasters",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "workspaces": [
    "back",
    "front"
  ],
  "main": "index.js",
  "scripts": {
    "dev": "run-p dev:*",
    "dev:front": "yarn --cwd front dev",
    "dev:back": "npm --prefix ./back/ run dev",
    "start-server": "npm --prefix ./back run start",
    "generate": "yarn --cwd front graphql-codegen",
    "lint": "yarn workspaces run lint",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ferisjuan/sportmasters.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ferisjuan/sportmasters/issues"
  },
  "homepage": "https://github.com/ferisjuan/sportmasters#readme",
  "devDependencies": {
    "@babel/eslint-parser": "^7.18.2",
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "eslint": "^8.17.0",
    "husky": ">=6",
    "lint-staged": "^13.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2"
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint '*/**/*.{ts,tsx}' --cache --fix",
    "*.js": "eslint --cache --fix",
    "*.{js,css,md}": "prettier --write"
  }
}
