{
  "extends": "ts-node/node16/tsconfig.json",
  "ts-node": {
    "files": true,
    "sourceMap": false,
    "transpileOnly": true,
    "compilerOptions": {
      "sourceMap": true,
      "pretty": true
    }
  },
  "compilerOptions": {
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "esModuleInterop": true,
    "lib": [
      "es6"
    ],
    "noImplicitAny": true,
    "outDir": "./dist",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "sourceMap": false,
    "strict": true,
    "incremental": true,
    "target": "es6",
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "./jest-*"
  ],
}
