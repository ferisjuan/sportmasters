{
  "extends": "ts-node/node16/tsconfig.json",
  "ts-node": {
    "compilerOptions": {
      "esModuleInterop": true,
      "pretty": true,
      "sourceMap": true,
    },
    "files": true,
    "sourceMap": false,
    "swc": true,
    "transpileOnly": true,
  },
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "baseUrl": "./src",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "incremental": true,
    "isolatedModules": true,
    "lib": [
      "esnext",
      "esnext.asynciterable"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "sourceMap": false,
    "skipLibCheck": true,
    "target": "esnext",
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "./jest-*"
  ],
}
